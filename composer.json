{
    "name": "dorianneto/symfony-profane-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Dorian Neto",
            "email": "doriansampaioneto@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "symfony/http-kernel": "^4.2",
        "symfony/validator": "^4.2",
        "symfony/intl": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "DorianNeto\\SymfonyProfaneBundle\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "phpunit": "./vendor/bin/phpunit --colors=always",
        "lint": "./vendor/bin/phpcs --standard=PSR1,PSR2 --extensions=php src/",
        "tests": [
            "@phpunit",
            "@lint"
        ]
    }
}
